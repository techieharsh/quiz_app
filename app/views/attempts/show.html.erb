<div class="container">
    <div class="row" align="center">
       Your Result :: <%= @result %> %
    </div>
	<div class="row">
	    <div class="col-md-12 col-xs-12" style="margin: 20px 0px 20px 0px;">
	        <div class="question">
	          	<% @attempt.quizsubmits.each do |ques| %>
	          		<h5><b><%= ques.question.question %></b><br/></h5>

	          		<% ques.question.answers.each do |ans| %>
	          			<ul>
	            			<li><%= ans.option %></li><br/>

	          			</ul>
	          		<% end %>
	          		<span class="btn btn-info btn-xs">Correct Answer:
	              		<%= ques.question.correct_answer %>
	          		</span>
                    <% if ques.question.correct_answer == ques.answer.option %>
		          		<span class="btn btn-success btn-xs">Your Answer:
		              		<%= ques.answer.option %>
		          		</span>
                    <% else %>
	                    <span class="btn btn-danger btn-xs">Your Answer:
		              		<%= ques.answer.option %>
		          		</span>
                    <% end %>
	          	<% end %>
	        </div>
	    </div>
	</div>
</div>
